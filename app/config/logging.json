{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "crafty": {
      "format": "%(asctime)s - [Crafty]          (%(name)s) - %(levelname)s - %(message)s"
    },
    "tornado_access": {
      "format": "%(asctime)s - [Tornado: Access] (%(name)s) - %(levelname)s - %(message)s"
    },
    "tornado_other": {
      "format": "%(asctime)s - [Tornado: Other]  (%(name)s) - %(levelname)s - %(message)s"
    },
    "schedule": {
      "format": "%(asctime)s - [Schedules]       (%(name)s) - %(levelname)s - %(message)s"
    },
    "ftp": {
      "format": "%(asctime)s - [FTP]             (%(name)s) - %(levelname)s - %(message)s"
    }
  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "crafty",
      "stream": "ext://sys.stdout"
    },

    "crafty_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "crafty",
      "filename": "logs/crafty.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },

    "tornado_access_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "tornado_access",
      "filename": "logs/tornado-access.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },

    "tornado_app_general_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "tornado_other",
      "filename": "logs/tornado-other.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },

    "schedule_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "schedule",
      "filename": "logs/schedule.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },
    "ftp_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "ftp",
      "filename": "logs/ftp.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    }
  },

  "loggers": {
    "": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "tornado.access": {
      "level": "INFO",
      "handlers": ["tornado_access_file_handler"],
      "propagate": false
    },
    "tornado.application": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "tornado.general": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "schedule": {
      "level": "INFO",
      "handlers": ["console"],
      "propagate": false
    },
    "pyftpdlib": {
      "level": "INFO",
      "handlers": ["console"],
      "propagate": false
    },
    "peewee": {
      "level": "INFO",
      "handlers": ["console"],
      "propagate": false
    }
  }
}